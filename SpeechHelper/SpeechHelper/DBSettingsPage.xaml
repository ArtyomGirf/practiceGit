<Page x:Class="SpeechHelper.DBSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpeechHelper"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DBSettingsPage">

    <Grid >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Label Content="Выберите таблицу:" FontSize="18"/>
            <ComboBox x:Name="choiseTable" Width="150" FontSize="18" SelectionChanged="ChoiseTableSelectionChanged"/>
        </StackPanel>

        <Frame x:Name="DBTable" Margin="5,55,5,5"/>
    </Grid>
</Page>
